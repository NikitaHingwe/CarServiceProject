@model CarRentalProject.ViewModel.ServiceTypeViewModel
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div>
        <h2 style="color:white; font-family:'Times New Roman', Times, serif">Services</h2>
    </div>
    <div>

        @using (Html.BeginForm("AddNewService", "ServiceType"))
         {
            <div class="form-group">
                @Html.TextBoxFor(m => m.ServiceType.Name, new { @class = "form-control" })
            </div>
            <button class="btn btn-primary" type="submit">Add Service</button>
       
        }
    </div>
    <br />
    <div>
        <table id="services" class="table table-hover" style="background-color:aliceblue; font-family:'Times New Roman', Times, serif">
            <tr>
                <th>Name</th>
                <th></th>
            </tr>

            @foreach (var c in Model.ServiceTypes)
            {
                <tr>
                    <td>@c.Name</td>
                    @*<td><button data-ServiceType-id="@c.Id" type="button" class="btn btn-danger jq-delete">Delete</button></td>*@

                    <td>@Html.ActionLink(" ", "Delete", new { c.Id }, new { @class = "btn btn-danger fa fa-trash-o", @style = "color: black" })</td>
                </tr>
            }
        </table>
    </div>
</div>


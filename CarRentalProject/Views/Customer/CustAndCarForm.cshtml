@model CarRentalProject.ViewModel.NewCustomerViewModel
@{
    ViewBag.Title = "CustAndCarForm";
}

<h3>Car Records for Customer</h3>
@Html.ActionLink("Add Car", "CarForm", "Car", Model.Customer, new { @class = "btn btn-primary", @style = "color: white; text-decoration:none" })

<div>
    <br />
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
        </tr>
        <tr>
            <td>@Model.Customer.FirstName</td>
            <td>@Model.Customer.LastName</td>
            <td>@Model.Customer.PhoneNumber</td>
            <td>@Model.Customer.Email</td>
        </tr>
    </table>
    <hr />
    <br />
    <br />
</div>

    <table class="table">
        <tr>
            <th>VIN</th>
            <th>Make</th>
            <th>Model</th>
            <th>Style</th>
            <th>Color</th>
            <th></th>
       
        </tr>
        @foreach (var c in Model.Cars)
        {
            if (c.CustomerId == Model.Customer.Id)
            {
            <tr>
                <td>@c.VIN</td>
                <td>@c.Make</td>
                <td>@c.Model</td>
                <td>@c.Style</td>
                <td>@c.Color</td>
                <td class="col-md-4">
                    @Html.ActionLink("+ADD New Service", "AddNewServices", "Car", c, new { @class = "btn btn-primary", @style = "color: white; text-decoration:none" })
                    @Html.ActionLink("Edit", "EditForm", "Car", c, new { @class = "btn btn-success", @style = "color: white; text-decoration:none" })
                    @Html.ActionLink("Delete", "Delete", "Car", new { c.Id }, new { @class = "btn btn-danger", @style = "color: white; text-decoration:none" })
                </td>
            </tr>
            }
        }

    </table>

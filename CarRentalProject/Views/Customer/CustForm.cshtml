@*@model CarRentalProject.Models.Customer*@

@model CarRentalProject.ViewModel.NewCustomerViewModel
@{
    /**/

    ViewBag.Title = "CustForm";
}

<h2>Customer Form</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.FirstName)
        @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.FirstName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.LastName)
        @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.LastName)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.PhoneNumber)
        @Html.TextBoxFor(m => m.Customer.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.PhoneNumber)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Email)
        @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
    </div>


    @Html.HiddenFor(m => m.Customer.Id)
    <button class="btn btn-primary" type="submit">Save</button>
    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-primary", @style = "color: white; text-decoration:none" })
}